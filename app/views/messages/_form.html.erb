<%= simple_form_for(@message, remote: true) do |f| %>
  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :content, label: false %>
    <%= f.hidden_field :chat_room_id, value: "#{@chatroom.id}" %>
 </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
